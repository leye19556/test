extends ./layout/layout
include ./partial/mixins/coinOptionBlock
block content
    .coin-info-wrapper
        .base-rate
            p.usd_krw 
            p.upbit-btc-krw
            p.binance-btc-usd
            p.btc-diff
        .compare-container
            .first-exchange
                label 기준 거래소
                select.base-selector(name="ex1")
                    option(value="upbit") Upbit
            .compare-coin
                select.coin-selector(name="coin")
                    option(value="ALL",selected) 코인선택
                    each coin in coins
                        +coinOptionBlock(coin)
                input.alarm-percent-input(type="number",min=0,max=100,step="0.1",placeholder="% 입력")
                button.coin-setting-btn 알림설정 
                button.coin-setting-cancel 알림취소
            .setting
                span.setting-btn
                    i.fas.fa-cog
        include ./partial/settingbar
        ul.coin-info-container
            li.coin-head.coin
                p.coin-name 코인
                p.coin-uprice 현재 가(KRW) 
                p.coin-bprice 가격(Binance)
                p.coin-diff 퍼센트(%)
        .info-wrapper.upbit-notice
            .control-bar
                h5 업비트 상장 소식
                span
                    i.fas.fa-minus   
            include ./partial/upbitInfoListing
        .info-wrapper.binance-notice
            .control-bar
                h5 바이낸스 상장 소식
                span
                    i.fas.fa-minus
            include ./partial/binanceInfoListing
    include ./partial/loading

    script(src="/socket.io/socket.io.js")
  