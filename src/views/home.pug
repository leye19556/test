extends ./layout/layout
include ./partial/mixins/coinOptionBlock
block content
    .coin-info-wrapper
        .base-rate
            p.usd_krw 
            p.upbit-btc-krw
            p.binance-btc-usd
            p.btc-diff
        .compare-container
            .first-exchange
                label 기준 거래소
                select.base-selector(name="ex1")
                    option(value="upbit") Upbit
            .compare-coin
                label(for="") 코인
                select.coin-selector(name="coin")
                    option(value="ALL",selected) ---선택 하세요---
                    each coin in coins
                        +coinOptionBlock(coin)
                input.alarm-percent-input(type="number",min=0,max=100,step="0.1",placeholder="% 입력")
                button.coin-setting-btn 알림설정 
                button.coin-setting-cancel 알림취소
            .setting
                span.setting-btn
                    i.fas.fa-cog
        include ./partial/settingbar
        ul.coin-info-container
            li.coin
                p 코인
                p 현재 가(KRW) 
                p 가격(Binance)
                p 퍼센트(%)
            .info-wrapper
                .control-bar
                    h5 업비트 코인 상장 소식
                    span
                        i.fas.fa-minus   
                include ./partial/infoListing

    script(src="/socket.io/socket.io.js")
    script(src="/static/main.js")