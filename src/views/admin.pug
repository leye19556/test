extends ./layout/layout
block content
    h4 코인리스트 관리
    form.form-container(action="/coin" method="post")
        input(type="text" name="name" placeholder="코인 이름" required)
        input(type="submit" value="추가")
    p 등록된 코인: #{coins.length} 개
    ul.coin-container
        each coin in coins
            li.coin
                p.coin-name(id=`${coin._id}`) 
                    span #{coin.name}
                    input.edit-input(value=`${coin.name}`)
                p.coin-time #{moment(coin.createdAt).format("YYYY-MM-DD HH:MM:SS")}
                p.edit-coin 
                    span.edit-btn(data-id=coin._id) 수정 
                p.delete_coin
                    span.delete_btn ❌
                
